<header class="fixed flex w-full justify-between z-30 px-20 text-lg text-white bg-[#13171C]">
    <a class="flex items-center" href="/">
        
        <div >
            <img class="h-20 p-2" src="/images/logo/logo-horizontal.svg" alt="logo Vic Ingeniería y Seguridad">
        </div>
    </a>
    
    
    <nav class="flex flex-row items-center gap-x-5">
        <a class="hover:underline underline-offset-4" href="/">Inicio</a>
    
        <!-- Menú desplegable -->
        <div class="relative z-20">
            <a id="menuToggle" class="hover:underline underline-offset-4 cursor-pointer">Nuestros Servicios ▾</a>
            <ul id="dropdownMenu" class="dropdown-list absolute hidden bg-slate-300 shadow-lg mt-2 p-3 rounded-md text-semibold">
                <li><a href="/cctv">CCTV</a></li>
                <li><a href="/control">Control de Acceso</a></li>
