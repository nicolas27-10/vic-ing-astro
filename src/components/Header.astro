            </ul>
        </div>
    
        <a class="hover:underline underline-offset-4" href="/contacto">Contacto</a>
    </nav>
</header>

<style>
    /* Estilo del contenedor de la lista desplegable */
    .relative {
        position: relative;
        
    }

    /* Estilo de la lista desplegable, inicialmente oculta */
    .dropdown-list {
        list-style-type: none;
        padding: 0;
    }
    
    .dropdown-list li {
        margin: 5px 0;
    }
    
    .dropdown-list a {
        text-decoration: none;
        color: black;
        display: block;
        padding: 8px;
        font-weight: 500;
    }
    
    .dropdown-list a:hover {
        text-decoration: underline solid #0d112e;
        text-decoration-thickness: 2px;
    }

    header {
        animation: header-blur-scroll 0.3s ease-in-out both;
        animation-timeline: scroll();
        animation-range: 0 200px;
    }

    @keyframes header-blur-scroll {
        0% {
            /* backdrop-filter: blur(0px); */
            background:#13171C;
        }
        100% {
            /* backdrop-filter: blur(10px); */
            /* background: rgba(0, 0 , 0, 0.2); */
            background: transparent;
            /* padding-bottom: var(--spacing-2); */
            border-bottom-color:black;
        }
    }
    </style>
    
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const menuToggle = document.getElementById("menuToggle");
        const dropdownMenu = document.getElementById("dropdownMenu");
    
        menuToggle.addEventListener("click", function(event) {
            //event.stopPropagation(); // Evita que el clic se propague al documento
            dropdownMenu.classList.toggle("hidden");
        });
    
        document.addEventListener("click", function(event) {
            if (!menuToggle.contains(event.target as Node) && !dropdownMenu.contains(event.target as Node)) {
                dropdownMenu.classList.add("hidden");
            }
        });
    });
    </script>
    