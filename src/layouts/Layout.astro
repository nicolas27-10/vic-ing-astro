---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '@fontsource/fira-sans-condensed';
// Supports weights 100-900
import '@fontsource-variable/montserrat';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import "../styles/global.css";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	
		<!-- SEO -->
		<meta name="description" content="VIC - Ingeniería y Seguridad. Una empresa que se enfoca en tu tranquilidad" />
	
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	
		<!-- Open Graph (Facebook, LinkedIn, WhatsApp) -->
		<meta property="og:title" content="VIC - Ingeniería y Seguridad" />
		<meta property="og:description" content="Una empresa que se enfoca en tu tranquilidad" />
		<meta property="og:image" content="https://vicseguridad.netlify.app/images/prev_image.jpg" />
		<meta property="og:url" content="https://vicseguridad.netlify.app/" /> <!-- cambia esto a tu URL real -->
		<meta property="og:type" content="website" />
	
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="VIC - Ingeniería y Seguridad" />
		<meta name="twitter:description" content="Una empresa que se enfoca en tu tranquilidad" />
		<meta name="twitter:image" content="/images/prev_image.jpg" />
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>


<style is:global>
	html {
		font-family: 'Roboto';
	}

	html, h1{
		font-family: 'Montserrat Variable', sans-serif;
	}


	body{
		background-color: #0f0f0f;
	}
	
	@utility mask-fade-bottom{
		mask-image: linear-gradient(to bottom, #1B1B28 80%, transparent 100%);
	}
</style>
